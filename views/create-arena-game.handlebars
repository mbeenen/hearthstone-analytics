<h2>Create Arena Game</h2>
<form action="/create-arena-game" method="POST" role="form">
  <div class="form-group">
    <label for="class">Class</label>
    <select class="form-control" id="class" name="playerClass">
      {{#each classes}}
        <option value="{{_id}}"
          {{#if selected}}
            selected 
          {{/if}}
        >{{_id}}</option>
      {{/each}}  
    </select>
  </div>
  <div class="form-group">
    <label for="opponent-class">Opponent Class</label>
      <select class="form-control" id="opponent-class" name="opponentClass">
        {{#each classes}}
        <option value="{{_id}}">{{_id}}</option>
        {{/each}}  
      </select>
  </div>
  <button type="submit" value="2" name="result" class="btn btn-success">Record Win</button>
  <button type="submit" value="0" name="result" class="btn btn-danger">Record Loss</button>
  <button type="submit" value="1" name="result" class="btn btn-info">Record Draw</button>
</form>
